<p id="notice"><%= notice %></p>

<h1>Listing Stock Prices</h1>

<table>
  <thead>
    <tr>
      <th>Stock name</th>
      <th>Stock value</th>
      <th>Percent Change</th>
    </tr>
  </thead>

  <tbody>
    <% @current_stock_prices.each do |stock| %>
      <tr>
        <td><%= stock['name'] %></td>
        <td><%= stock['value'] %></td>
        <td><%= stock['percentChange'] %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h1>Listing Saveks</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Occupation</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Radius</th>
      <th>Avg rating</th>
      <th>Ratings</th>
      <th>Gender</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @saveks.each do |savek| %>
      <tr>
        <td><%= savek.first_name %></td>
        <td><%= savek.last_name %></td>
        <td><%= savek.occupation %></td>
        <td><%= savek.latitude %></td>
        <td><%= savek.longitude %></td>
        <td><%= savek.radius %></td>
        <td><%= savek.avg_rating %></td>
        <td><%= savek.ratings %></td>
        <td><%= savek.gender %></td>
        <td><%= link_to 'Show', savek %></td>
        <td><%= link_to 'Edit', edit_savek_path(savek) %></td>
        <td><%= link_to 'Destroy', savek, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

